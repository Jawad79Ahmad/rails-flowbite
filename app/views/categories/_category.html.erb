<div class="flex flex-col justify-center my-auto pb-6 px-4 text-gray-700 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-600">
  <%= form_for(category, url: '#', html: { class: 'space-y-2 md:space-y-4' }) do |f| %>
    <div class="field">
      <%= f.label :name, class: 'block mb-2 text-gray-900 dark:text-white' %>
      <%= f.text_field :name, autofocus: true, autocomplete: 'off', class: 'bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', disabled: true %>
    </div>

    <div class="actions w-full">
      <%= link_to 'Edit Category', edit_category_path(category), class: 'mt-2 w-full flex justify-center text-center px-4 py-2 font-medium text-green-800 bg-transparent border rounded-lg border-green-800 hover:bg-green-800 hover:text-white dark:border-green-500 dark:text-green-500 dark:hover:text-white dark:hover:bg-green-700 dark:focus:bg-green-700' %>
    </div>
  <% end %>
</div>
